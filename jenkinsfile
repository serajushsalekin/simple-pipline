def gv

pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.0.1', '1.0.2', '1.1.1'])
        booleanParam(name: 'executeTest', defaultValue: false)
    }

    stages {
        stage('init') {
            steps {
                script {
                    gv = load 'script.groovy'
                }
            }
        }
        stage('build') {
            steps {
                echo "Hello Dev!"
            }
        }

        stage('test') {
            when {
                expression {
                    params.executeTest == true
                }
            }
            steps {
                echo "Testing initializing..."
            }
        }

        stage('deploy') {
            input {
                message "Select environmennt to deploy to"
                ok "Done"
                parameters {
                    choice(name: 'ENV', choices: ['dev', 'prod', 'stage'])
                }
            }
            steps {
                script {
                    gv.deploy()
                    echo "Deploying to ${ENV}"
                }
            }
        }

        stage('prod-deploy') {
            steps {
                script {
                    env.ENV = input message: "Wants to re-deploy to", ok "Done", parameters: [choice(name:'dev', name:'prod')]
                    echo "re-deploy initializing for ${ENV}"
                }
            }
        }
    }
}
